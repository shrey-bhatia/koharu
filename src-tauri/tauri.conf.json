{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "koharu",
  "identifier": "koharu",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:9000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../next/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Koharu",
        "width": 1200,
        "height": 900,
        "center": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "width": 400,
        "height": 300,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
